(require 'cl)

(defvar installing-package-list
  '(    
    ruby-mode
    inf-ruby
    rspec-mode
    typescript-mode
    tide
    company
    flycheck
    rust-mode
    slime
    neotree
    popup
    elscreen
    doom-themes
    smart-mode-line
   ))

(let ((not-installed (loop for x in installing-package-list
                            when (not (package-installed-p x))
                            collect x)))
  (when not-installed
    (package-refresh-contents)
    (dolist (pkg not-installed)
        (package-install pkg))))

