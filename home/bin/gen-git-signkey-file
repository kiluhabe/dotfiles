#!/usr/bin/env bash

main(){
        PUBLIC_KEY_FILE_NAME="sign_key.pub"
        PUBLIC_KEY="$(akr load -L | grep SignKey)"
        if ! [ -f $HOME/.ssh/$PUBLIC_KEY_FILE_NAME ]; then
                  touch $HOME/.ssh/$PUBLIC_KEY_FILE_NAME
        fi
        echo $PUBLIC_KEY > $HOME/.ssh/$PUBLIC_KEY_FILE_NAME
}

main
