#!/usr/bin/env bash

main() {
    [ -z "$1" ] && echo "please pass path to image" && return 1

    wal -i $1

    . $HOME/.cache/wal/colors.sh

    echo "$(BACKGROUND=$background FOREGROUND=$foreground HIGHLIGHT=$color4 mo $HOME/.themes/thicc/openbox-3/themerc.mo)" > $HOME/.themes/thicc/openbox-3/themerc
    echo "$(BACKGROUND=$background FOREGROUND=$foreground HIGHLIGHT=$color4 mo $HOME/.config/rofi/config.rasi.mo)" > $HOME/.config/rofi/config.rasi

    pkill bar
    bar &

    openbox --restart
}

main $@
