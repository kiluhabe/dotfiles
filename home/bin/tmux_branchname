#!/usr/bin/env bash

main() {
    branchname="$(git rev-parse --abbrev-ref HEAD 2> /dev/null)"
    is_git_dirty=$(git status -s --ignore-submodules=dirty 2> /dev/null)
    if [ -n "$branchname" ]; then
        [ -n "$is_git_dirty" ] && echo "âœ— $branchname" || echo $branchname
    else
        echo "---"
    fi
}

main $1
