#!/usr/bin/env bash
# shellcheck disable=SC1090
#
# bar - Dylan Araps

source ~/.cache/wal/colors.sh
enable -f /usr/lib64/bash/sleep sleep

dat() {
    printf -v dat '%(%r)T' '-1'
    dat="${dat/:?? / }"
}

wif() {
    cur="$(iwgetid  -r)"
    wif="${cur:+ }"
}

bat() {
    cur="$(< /sys/class/power_supply/BAT0/capacity)"
    sta="$(< /sys/class/power_supply/BAT0/status)"

    case "$cur" in
        [0-9]|1[0-9])         bat="" ;;
        2[0-9]|3[0-9]|4[0-9]) bat="" ;;
        5[0-9]|6[0-9])        bat="" ;;
        7[0-9]|8[0-9])        bat="" ;;
        *)                    bat="" ;;
    esac

    [[ "$sta" == "Charging" ]] && bat+=" "
}

vol() {
    cur="$(amixer get Master |grep % |awk '{print $5}'|sed 's/[^0-9]//g')"

    case "${cur//%}" in
        [0-9]|1[0-9]|2[0-9]) vol="" ;;
        3[0-9]|4[0-9])       vol="" ;;
        *)                   vol="" ;;
    esac
}

