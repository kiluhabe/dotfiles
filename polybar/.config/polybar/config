[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}

[bar/common]
height = 48
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Roboto Mono:pixelsize=12;2
font-1 = FontAwesome5Free:style=Solid:pixelsize=14;2
font-2 = FontAwesome5Free:style=Regular:pixelsize=14;2
font-3 = FontAwesome5Brands:style=Regular:pixelsize=14;2
font-4 = Symbola:pixelsize=16;2
override-redirect = true
radius = 16
offset-y = 16
module-margin = 1

[bar/one]
inherit = bar/common
width = 700
modules-center = date ewmh
top = true
padding = 8
offset-x = 16

[bar/two]
inherit = bar/common
width = 192
modules-center = backlight battery audio
top = true
padding = 8
offset-x = 1456

[bar/three]
inherit = bar/common
width = 240
modules-center = bluetooth wired-network wireless-network
top = true
padding = 8
offset-x = 1664
click-left = rofi-wifi
click-right = rofi-bluetooth

[module/date]
type = internal/date
interval = 1.0
date = "%a, %d %B"
time = %H:%M
label = ï€— %date% | %time%

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = false
enable-scroll = false
label-active = â—
label-active-foreground = ${colors.foreground}
label-active-background = ${colors.background}
label-active-padding = 1
label-empty-foreground = ${colors.primary}
label-empty = â—
label-empty-padding = 1
label-occupied-foreground = ${colors.secondary}
label-occupied = â—
label-occupied-padding = 1
label-urgent = â—
label-urgent-padding = 1
label-urgent-foreground = ${colors.alert}

